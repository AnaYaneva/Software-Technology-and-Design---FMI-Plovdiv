@* COMMENTS *@

@*@{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }*@

@model List<AssignmentManager.Entities.Comment>

<h2 class="pull-left">Comments @ViewBag.AssignmentTitle</h2>
<a href="/Comment/Create/@ViewBag.AssignmentId" class="btn btn-success pull-right" style="margin-top:20px">Insert</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Content</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model)
        {
            <tr>
                <td>@comment.Content</td>
                <td>@comment.CreatedAt.ToString("dd/MM/yy")</td>
                <td>@comment.UpdatedAt.ToString("dd/MM/yy")</td>
                <td>
                    <a href="/Comment/Update/@comment.Id" class="btn btn-default">Update</a>
                    <a href="/Comment/Delete/@comment.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

